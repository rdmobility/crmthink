    <script>
        const toggleBtns = document.querySelectorAll('.toggle-btn');
        const prices = document.querySelectorAll('.price[data-monthly]');
        const periodTexts = document.querySelectorAll('.price-period');
        toggleBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                toggleBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                const period = btn.dataset.period;
                
                prices.forEach(price => {
                    const value = price.dataset[period];
                    price.textContent = parseInt(value).toLocaleString('pt-BR');
                });
                periodTexts.forEach(text => {
                    if (period === 'monthly') {
                        text.textContent = '/ empresa / m√™s / cobran√ßa mensal';
                    } else {
                        text.textContent = '/ empresa / m√™s / cobran√ßa anual';
                    }
                });
            });
        });
        const faqItems = document.querySelectorAll('.faq-item');
        
        faqItems.forEach(item => {
            const question = item.querySelector('.faq-question');
            question.addEventListener('click', () => {
                faqItems.forEach(otherItem => {
                    if (otherItem !== item) {
                        otherItem.classList.remove('open');
                    }
                });
                item.classList.toggle('open');
            });
        });
    </script>
